<nav>
  <%= link_to 'Главная страница', root_path, class: 'nav_button' %>
  <a class="nav_button" href="<%= cars_path %>">Автомобили</a>
  <a class="nav_button" href="<%= clients_path %>">Клиенты</a>
  <a class="nav_button" href="<%= rents_path %>">Аренды</a>
</nav>

<div class="back">
  <div class="back_inside">
    <h1>Автомобили</h1>

    <%= link_to 'Добавить новый автомобиль', new_car_path, class: 'btn btn-primary' %>

    <table class="car-table">
      <thead>
      <tr>
        <th>Марка</th>
        <th>Модель</th>
        <th>Год выпуска</th>
        <th>Цена за день</th>
        <th>Действия</th>
      </tr>
      </thead>
      <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%= car.brand %></td>
          <td><%= car.model %></td>
          <td><%= car.release_year %></td>
          <td><%= number_to_currency(car.price_per_day, unit: '₽') %></td>
          <td>
            <%= link_to 'Показать', car_path(car), class: 'btn btn-info' %> |
            <%= link_to 'Редактировать', edit_car_path(car), class: 'btn btn-warning' %> |
            <%= link_to 'Удалить', car_path(car), data: { turbo_method: :delete, confirm: 'Вы уверены, что хотите удалить этот автомобиль?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>
